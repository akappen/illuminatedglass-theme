!!!
%html{ 'class' => 'no-js', :lang => 'en' }
  %head
    %meta{ :name => 'google-site-verification', :content => photographer.google_verification }
    %title= "#{yield(:meta_title).presence || yield(:page_title).presence || 'Home'}  | #{photographer.name}"
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{:rel=>"shortcut icon", :href=>"/assets/favicon.ico", :type=>"image/x-icon"}
  %body.splash
    .container#content
      = yield
    = render :partial => 'shared/footer'
